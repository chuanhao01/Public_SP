<main class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <article class="d-block w-100">
                <h2 class="d-block w-100 text-center">
                    Looking at your own listings
                </h2>
            </article>
        </div>
        <div class="col-12">
            <template
            v-if='listings'>
                <div class="row">
                    <template
                    v-if='listings.length > 0'>
                    {{!-- If the user has listings --}}
                        <b-card
                        v-for='listing in listings'
                        :title='listing.title'
                        :bg-variant='listing.availability ? "primary" : "success"'
                        class="col-4 mt-3 mb-3">
                            <b-card-text>
                                <span class="d-block font-weight-bold">Description</span>
                                <p>
                                    \{{listing.description}}
                                </p>
                            </b-card-text>
                            <b-card-text>
                                <article>
                                    <span class="font-weight-bold">Price: </span>
                                    <span>
                                        \{{listing.price}}
                                    </span>
                                </article>
                                <article>
                                    <span>Likes: \{{listing.num_likes}}</span>
                                </article>
                            </b-card-text>
                            <b-card-text>
                                <b-button variant="primary" :href='`/user/listing/${listing.listing_id}`'>View</b-button>
                                <b-button variant="warning" :href='`/user/listing/edit/${listing.listing_id}`'>Edit</b-button>
                                <b-button
                                @click='deleteListing(listing.listing_id)'
                                variant="danger">
                                    Delete
                                </b-button>
                            </b-card-text>
                        </b-card>
                    </template>
                </div>
            </template>
        </div>
    </div>
</main>

{{#section 'scripts'}}
<script>
    const app = new Vue({
        el: '#app',
        data: {
            listings: null,
        },
        methods: {
            getUserListing(){
                axios
                .get('/api/listing')
                .then(
                    function(res){
                        console.log(res.data.listings);
                        this.listings = res.data.listings;
                    }.bind(this)
                )
                .catch(
                    function(err){
                        console.log(err);
                    }
                )
            },
            deleteListing(listing_id){
                axios
                .delete(`/api/listing/${listing_id}`)
                .then(
                    function(res){
                        console.log(res);
                        this.getUserListing();
                    }.bind(this)
                )
                .catch(
                    function(err){
                        console.log(err);
                    }
                )
            }
        },
        created(){
            this.getUserListing();
        }
    });
</script>
{{/section}}
